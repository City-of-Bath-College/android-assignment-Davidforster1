<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11b136"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- image obtained from http://tinyurl.com/bjj63pa -->  <ImageView
    android:id="@+id/imgPicture"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/earth"
    android:layout_centerHorizontal="true"
    />

    <TextView
        android:id="@+id/lblTitle"
        android:text="Welcome to Geo Quiz App!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPicture"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/lblHighscore"
        android:text="Easy high score: 0"
        android:layout_below="@id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#64421d"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblHighscoreMedium"
        android:text="Medium high score: 0"
        android:layout_below="@id/lblHighscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#C0C0C0"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblHighscoreHard"
        android:text="Hard high score: 0"
        android:layout_below="@id/lblHighscoreMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#fdff34"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblHighscoreHard"
        android:layout_centerHorizontal="true"
        android:text="Play!"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"

        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnHighscore"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:text="High Scores"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnHighscore"
        android:layout_centerHorizontal="true"
        android:text="About"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="#ffffff" />

</RelativeLayout>