<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00e676"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:text="Press Play to Begin the Quiz!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblHighscore"
        android:text="High score: 0"
        android:layout_below="@id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#fdff34"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblHighscore"
        android:layout_centerVertical="true"
        android:text="Play!"
        android:textSize="24sp"
        android:background="#51fcff"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignEnd="@+id/imgPicture"
        android:layout_alignStart="@+id/imgPicture" />

    <Button
        android:id="@+id/btnHighscore"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnPlay"
        android:layout_centerVertical="true"
        android:text="High Scores"
        android:textSize="24sp"
        android:background="#51fcff"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignEnd="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnHighscore"
        android:layout_centerVertical="true"
        android:text="About"
        android:textSize="24sp"
        android:background="#51fcff"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignStart="@+id/btnHighscore"
        android:layout_alignEnd="@+id/btnHighscore" />

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/questiontitleimage"
        android:layout_above="@id/lblTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>



</RelativeLayout>