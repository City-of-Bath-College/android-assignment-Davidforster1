<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11b136"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:text="Choose your difficulty!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblTitle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Easy!"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnEasy"
        android:layout_centerHorizontal="true"
        android:text="Medium"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnHard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnMedium"
        android:layout_centerHorizontal="true"
        android:text="Hard"
        android:textSize="24sp"
        android:background="#3611B1"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textColor="#ffffff" />

    <!-- image obtained from http://tinyurl.com/bjj63pa -->  <ImageView
    android:id="@+id/imgPicture"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/earth"
    android:layout_centerHorizontal="true"
    />

</RelativeLayout>